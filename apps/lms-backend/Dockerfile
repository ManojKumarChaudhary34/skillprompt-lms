# Run the container with `docker run -p 3000:3000 -t lms-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system lms-backend && \
          adduser --system -G lms-backend lms-backend

COPY dist/apps/lms-backend lms-backend/
RUN chown -R lms-backend:lms-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix lms-backend --omit=dev -f install

CMD [ "node", "lms-backend" ]
